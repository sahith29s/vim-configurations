<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css"
        integrity="sha512-iecdLmaskl7CVkqkXNQ/ZH/XLlvWZOJyj7Yy7tcenmpD1ypASozpmT/E0iPtmFIB46ZmdtAc9eNBvH0H/ZpiBw=="
        crossorigin="anonymous" referrerpolicy="no-referrer" />

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-KK94CHFLLe+nY2dmCWGMq91rCGa5gtU4mk92HdvYe+M/SXH301p5ILy+dN9+nJOZ" crossorigin="anonymous">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <style>
        .temp_form {
            width: 80vw;
            margin: auto;
            margin-top: 5rem;
            margin-bottom: 4rem;
            border-radius: 4px;
            height: 7vh;
        }

        #cityName {
            width: 60%;
            height: 2.4rem;
            border-radius: 4rem;


        }

        #submitButton,
        #hanjjki {
            position: relative;
            left: 4.7rem;
            background: yellow;
            border: .2rem solid white;
            border-radius: .4rem;
            width: 4rem;
            bottom: 10.9rem;
            left: 56.7rem;
        }



        .tempInformation {
            width: 35vh;
            height: 20vh;
            margin: auto;
            margin-top: 24px;
        }
    </style>
</head>

<body>
    {{>navbar}}

    <div class="main_content">
        <form action="" class="temp_form bg-ark d-flex   justify-content-center align-items-center ">
            <input type="text" id="cityName" class="bg-dark border-dark text-white" placeholder="Enter your city name"
                autocomplete="off">
        </form>


        <div class="tempInformation  bg-dark d-flex flex-column border rounded w-20 text-white">
            <div class="top_layer justify-content-between  d-flex ">
                <p id="dayInWebsite">Tuesday</p>
                <p id="todaysDateInWebsite">date here </p>
                <br>

            </div>
            <p id="outPutHere">out put here</p>

        </div>
        <button id="hanjjki">alksdjf</button>
    </div>


    <script src="../../public/js/main.js"></script>

    <script>

        const func = async () => {
            const url = `https://api.openweathermap.org/data/2.5/weather?q=pune&appid=1844d2069a063d37df933130fb5f85df`
            const response = await fetch(url)
            const fullResponse = await response.json()
            const outPutHere = document.getElementById("outPutHere")
            console.log(fullResponse)

            outPutHere.innerHTML = `${fullResponse.main.temp}`


        }
        document.getElementById("submitButton").addEventListener("click", func)
        document.getElementById("hanjjki").addEventListener("click", func)
    </script>

</body>

</html>